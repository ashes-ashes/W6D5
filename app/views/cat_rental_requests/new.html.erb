<form action="<%= cat_rental_requests_url %>" method="post">
    <label for="catselect">Cat to Rent:</label>
    <select name="cat_rental_request[cat_id]" id="catselect">
        <option disabled selected>Choose a cat:</option>
        <% @cats.each do |cat| %>
            <option value="<%= cat.id %>"><%= cat.name %></option>
        <% end %>
    </select>
    <br><br>
    <label for="start">Start date:</label>
    <input type="date" name="cat_rental_request[start_date]" id="start">
    <br><br>
    <label for="end">End date:</label>
    <input type="date" name="cat_rental_request[end_date]" id="end">
    <br><br>
    <input type="submit" value="Request">
</form>