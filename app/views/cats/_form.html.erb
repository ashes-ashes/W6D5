<% if action == :new %>
  <% action_url = cats_url %>
  <% button_text = 'create cat' %>
<% elsif action == :edit %>
  <% action_url = cat_url(cat) %>
  <% button_text = 'edit cat' %>
<% end %>

<form action="<%= action_url %>" method="post">
  <% if action == :edit %>
    <input type="hidden" name="_method" value="patch">
  <% end %>

  <label for="name">Name:</label>
    <input type="text" id="name" name="cat[name]" value="<%= cat.name %>">
  <br>
  <br>

  <label for="sex">Sex:</label>

  <div id="sex">
    M <input type="radio" id="M" name="cat[sex]" value="M" <%= cat.sex == "M" ? "checked" : ""%>>
    F <input type="radio" id="F" name="cat[sex]" value="F"<%= cat.sex == "F" ? "checked" : ""%>>
  </div>

  <br>

  <label for="color">Color: </label>
  <select name="cat[color]" id="color">
    <option disabled <%= cat.color ? "" : "selected"%>>Choose a color</option>
    <% colors.each do |color| %>
      <option value="<%= color %>" <%= cat.color == color ? "selected" : ""%>> <%= color %> </option>
    <% end %>
  </select>
  
  <br>
  <br>

  <label for="date">Birth Date: </label>
  <input id="date" type="date" name="cat[birth_date]" value="<%= cat.birth_date%>">

  <br>
  <br>

  <label for="description">Description: </label>
  <textarea name="cat[description]" id="description"><%= cat.description %></textarea>
  <br>
  <br>

  <input type="submit" value=" <%= button_text %> ">
</form>